@model AnnuityCreditCalculator.Models.InputDayCreditData

<form method="post" asp-action="DayCalculate">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Кредитный калькулятор для расчета аннуитетных займов (в днях)</h2>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Time"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Time" class="form-control" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Rate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Rate" class="form-control" />
                        <span asp-validation-for="Rate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Step"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Step" class="form-control" />
                        <span asp-validation-for="Step" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Рассчитать" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

<a asp-controller="Calculator" asp-action="Index" class="btn btn-primary m-3">Перейти на расчет в месяцах</a>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}